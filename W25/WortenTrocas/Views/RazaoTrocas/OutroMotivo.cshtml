@model WortenTrocas.Models.RazaoTroca

@{
    ViewBag.Title = "Outro Motivo";
}

@Styles.Render("~/Content/assetsLogin/css/loginNew/styleOutroMotivo.css")
@Styles.Render("http://fonts.googleapis.com/css?family=Open+Sans:600italic,400,300,600,700")
@Scripts.Render("~/Content/assetsLogin/plugins/jquery-1.10.1.min.js")


<body>
    <div class="login-form">

        <br />
        <img src="../../../img/img-outromotivo-1.jpg" style="vertical-align:middle; display:block; margin-left: auto; margin-right: auto " />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    
                    <img src="../../../img/img-outromotivo-2.jpg" style="vertical-align:middle; display:block; margin-left: auto; margin-right: auto " />
                    <br />
                    <br />
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.OutroMotivo, 10, 55, new { htmlAttributes = new { @class = "form-control"}, @style = "vertical-align:middle; display:block; margin-left: auto; margin-right: auto" })
                        @Html.ValidationMessageFor(model => model.OutroMotivo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submeter" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</body>

