@model WortenTrocas.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Recuperar Password | Worten Trocas";
}

<link href="css/style.css" rel='stylesheet' type='text/css' />
@Styles.Render("~/Content/assetsLogin/css/loginNew/style.css")
@Styles.Render("http://fonts.googleapis.com/css?family=Open+Sans:600italic,400,300,600,700")
@Scripts.Render("~/Content/assetsLogin/plugins/jquery-1.10.1.min.js")

<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

<h2>@ViewBag.Title.</h2>

<div class="login-form">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h2>Recuperar Password</h2>

    <br />
    <div class="head">
        <img src="../../Content/assetsLogin/css/loginNew/loginImages/mem2.jpg" alt="" />

    </div>
        @Html.AntiForgeryToken()
        
        
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email,"E-mail", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "width: 400px; max-width: 100%; border-style:solid; border-color:#AAAAAA;" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Recuperar" />
            </div>
        </div>
    }

</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
